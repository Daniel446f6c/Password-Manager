<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="350.0" prefWidth="300.0" stylesheets="@NewView.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.danield.passwordmanager.NewController">
   <children>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onLogin" text="Login" fx:id="btnTopLogin" />
            <Button mnemonicParsing="false" disable="true" text="New" />
            <Button mnemonicParsing="false" disable="true" text="Save" />
            <Button mnemonicParsing="false" disable="true" text="Close" />
            <Button mnemonicParsing="false" onAction="#onQuit" text="Quit" />
            <Button mnemonicParsing="false" onAction="#onAbout" text="About" />
            <Button mnemonicParsing="false" onAction="#onTheme" text="L/D" />
         </children>
      </HBox>
      <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <Label id="header-label" alignment="TOP_CENTER" text="New" />
            <TextField id="text-or-password-field" fx:id="txtFldFilePath" disable="true" focusTraversable="false" promptText="Select a file location ...">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </TextField>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Button fx:id="btnBrowse" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#onBrowse" text="Browse ...">
                     <HBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <PasswordField id="text-or-password-field" fx:id="pwFldMasterPassword" onKeyPressed="#onCheckKeyPressed" promptText="Master Password">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </PasswordField>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <HBox prefWidth="216.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label id="info-label" fx:id="lblInfoText" text="" />
                     </children>
                  </HBox>
                  <Button fx:id="btnCreate" mnemonicParsing="false" onAction="#onCreate" text="Create">
                     <HBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
